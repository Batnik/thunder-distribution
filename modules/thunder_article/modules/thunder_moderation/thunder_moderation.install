/**
 * Implements hook_install().
 */
function thunder_moderation_install() {

  $config = \Drupal::configFactory()->getEditable('node.type.article');

  $settings = $config->get('third_party_settings');

  $settings['content_moderation'] = [
    'enabled' => TRUE,
    'allowed_moderation_states' => [
      'published',
      'archived',
      'draft',
      'needs_review',
    ],
    'default_moderation_state' => 'draft',
  ];

  $config->set('third_party_settings', $settings)->save();

}
